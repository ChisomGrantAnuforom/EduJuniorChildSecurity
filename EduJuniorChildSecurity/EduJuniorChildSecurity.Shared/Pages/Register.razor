@page "/register"
@layout Layout.EmptyLayout2

@inject NavigationManager Navigation
<br/>
<br/>
<br/>
<br/>
<br/>
<div class="login-container">
    <div class="login-box">
        <h2>Let's Get Started</h2>
        <p>Please Register your School</p>

        <EditForm Model="@registrationModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label>School Name</label>
                <InputText class="form-control" @bind-Value="registrationModel.SchoolName"  ></InputText>
            </div>
           
            <div class="form-group">
                <label>Address</label>
                <InputTextArea class="form-control" @bind-Value="registrationModel.Address"  ></InputTextArea>
            </div>
            
            <div class="form-group">
                <label>Phone Number</label>
                <InputText class="form-control" @bind-Value="registrationModel.PhoneNumber" ></InputText>
            </div>
            
            <div class="form-group">
                <label>Email</label>
                <InputText class="form-control" @bind-Value="registrationModel.Email" />
            </div>
            

            <div class="form-group">
                <label>Password</label>
                <InputText class="form-control" @bind-Value="registrationModel.Password" type="password" />
            </div>
            
            <div class="form-group">
                <label>Proprietor/Proprietress Name</label>
                <InputText class="form-control" @bind-Value="registrationModel.ProprietorName" />
            </div>
            

            <button type="submit" class="btn-login">Register</button>
        </EditForm>
    </div>
</div>

@code {
    private RegistrationModel registrationModel = new();

    private void HandleLogin()
    {
        // TODO: Add authentication logic here
        Navigation.NavigateTo("/home");
    }

    public class RegistrationModel
    {
        // [Required]
        
        
        //[SchoolName]
        public string SchoolName { get; set; }
        
        //[Address]
        public string Address { get; set; }
        
        //[PhoneNumber]
        public string PhoneNumber { get; set; }

        // [EmailAddress]
        public string Email { get; set; }

        // [Required]
        public string Password { get; set; }
        
        //[ProprietorName]
        public string ProprietorName { get; set; }
    }
}
